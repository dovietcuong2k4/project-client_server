<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.client_server.client.gui.controller.MainController">

    <!-- Top: tiêu đề + tìm kiếm -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Student Manager" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TextField fx:id="searchField" promptText="Search by ID" HBox.hgrow="ALWAYS" />
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>
    </top>

    <!-- Center: TableView -->
    <center>
        <TableView fx:id="studentTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="dobColumn" text="DOB" prefWidth="100"/>
                <TableColumn fx:id="gpaColumn" text="GPA" prefWidth="50"/>
                <TableColumn fx:id="sexColumn" text="Sex" prefWidth="70"/>
                <TableColumn fx:id="majorColumn" text="Major" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom: CRUD buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Add" onAction="#handleAdd"/>
            <Button text="Update" onAction="#handleUpdate"/>
            <Button text="Delete" onAction="#handleDelete"/>
            <Button text="Refresh" onAction="#handleRefresh"/>
        </HBox>
    </bottom>

</BorderPane>

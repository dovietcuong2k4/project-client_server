<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.client_server.client.gui.controller.StudentFormController"
          hgap="10" vgap="10"
          prefWidth="350"
          alignment="CENTER">

<padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="DOB:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dobPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="GPA:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="gpaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Sex:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="sexComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Major:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="majorField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>

</GridPane>
